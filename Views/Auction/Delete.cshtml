@model CardHaven.Models.AuctionModel

@{
    ViewData["Title"] = "Radera";
}

<h1>Radera</h1>
<h2>Är du säker på att du vill radera auktionen?</h2>
<hr />
<div class="row">
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ImageName))
        {
            <img src="~/images/@Model.ImageName" alt="@Model.Name" class="img-fluid" />
        }
        else
        {
            <span>Ingen bild tillgänglig</span>
        }
</div>
<div>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.EndTime)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.EndTime)
    </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Ångra</a>
    </form>
</div>
